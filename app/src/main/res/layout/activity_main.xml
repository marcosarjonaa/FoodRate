<?xml version ="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width ="match_parent"
    android:layout_height ="match_parent"
    tools:context=".ui.views.activities.main.MainActivity" >

    <include
        android:id="@+id/appBarConfiguration"
        layout="@layout/app_bar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/my_nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemHorizontalPadding="16dp"
        android:fitsSystemWindows="true"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:elevation="8dp"
        app:itemIconTint="#030A1D"
        app:itemTextColor="#1B313E"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu_extend" />
</androidx.drawerlayout.widget.DrawerLayout>